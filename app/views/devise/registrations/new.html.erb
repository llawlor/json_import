<div class="row">
  <div class="col-sm-8 col-xs-12">

    <h4 class="breadcrumb">Sign Up</h4>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <label class="col-sm-4 col-xs-3 control-label">Email</label>
        <div class="col-sm-8 col-xs-6"><%= f.text_field :email, :class => 'form-control' %></div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 col-xs-3 control-label">Password</label>
        <div class="col-sm-8 col-xs-6"><%= f.password_field :password, :class => 'form-control' %></div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 col-xs-3 control-label">Password Confirmation</label>
        <div class="col-sm-8 col-xs-6"><%= f.password_field :password_confirmation, :class => 'form-control' %></div>
      </div>

      <div class="form-group">
        <label class="col-sm-4 control-label"></label>
        <div class="col-sm-8"><p class="form-control-static"><%= f.submit 'Create Account', :id => "user_submit", :class => 'btn btn-primary' %></p></div>
      </div>

    <% end %>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('user_email').focus();
</script>

