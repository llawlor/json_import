<%= form_for @record do |f| %>

  <%= error_messages_for @record %>

  <div class="form-group">
    <label for="record_json">Raw JSON</label>
    <%= f.text_area :json, value: @record.json_formatted, class: 'form-control', placeholder: 'Add JSON document here', rows: 10 %>
  </div>
  
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
